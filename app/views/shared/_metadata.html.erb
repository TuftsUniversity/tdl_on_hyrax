<dl class="metadatapane">
  <% unless @presenter.description.empty? %>
    <%
      full_description = ''
      @presenter.description.each do |description|
        full_description += (full_description.empty? ? "" : '<br/><br/>') + description
      end
    %>
    <p class="descrip-field"><%= raw MetadataMethods.read_more_or_less(full_description, 400) %></p>
  <% end %>

  <%= @presenter.attribute_to_html(:member_of_collections, { render_as: :linked, search_field: 'collection'}) %>
  <%= @presenter.attribute_to_html(:subject, { render_as: :linked, search_field: 'subject' }) %>
  <%= @presenter.attribute_to_html(:genre, {}) %>
  <%= @presenter.attribute_to_html(:permanent_url, {}) %>

  <div class="well ">
    <dl class="dl-horizontal">
      <dt>ID: </dt>
      <dd><%= @presenter.id %></dd>
      <dt>To Cite:</dt>
      <dd><%= link_to(
        "DCA Citation Guide",
        "http://sites.tufts.edu/dca/about-us/research-help/reproductions-and-use/",
        target: "_blank") %></dd>
      <% unless @presenter.rights_statement.nil? %>
        <dt>Usage:</dt>
        <dd><%= link_to(
          "Detailed Rights",
          @presenter.rights_statement.first,
          target: "_blank") %></dd>
      <% end %>
    </dl>
    <p>To request a high-resolution image, choose Add to List.</p>
  </div>
</dl>
